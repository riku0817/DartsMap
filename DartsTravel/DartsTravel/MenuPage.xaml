<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DartsTravel.MenuPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="DartsStart" Text="ダーツを投げよう！" FontSize="45" VerticalOptions="Start" HorizontalOptions="Center"/>
            <Label x:Name="tyuuigaki" Text="(ダーツを上にスライド)" FontSize="32" VerticalOptions="Start" HorizontalOptions="Center"/>
            <Image x:Name="dartskamae"  TranslationX="0" TranslationY="400"  Scale="2.5">
                <Image.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="PanGestureRecognizer_PanUpdated"/>
                </Image.GestureRecognizers>
                </Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>